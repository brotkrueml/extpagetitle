{
    "name": "brotkrueml/extpagetitle",
    "license": "GPL-2.0-or-later",
    "type": "typo3-cms-extension",
    "description": "Easy setting of the page title in TYPO3 extensions",
    "homepage": "https://github.com/brotkrueml/extpagetitle",
    "keywords": [
        "TYPO3",
        "extension",
        "page title",
        "seo"
    ],
    "version": "1.0.3",
    "authors": [
        {
            "name": "Chris MÃ¼ller",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/brotkrueml/extpagetitle/issues"
    },
    "require": {
        "typo3/cms-core": "^9.5 || ^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.0",
        "php-coveralls/php-coveralls": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Brotkrueml\\Extpagetitle\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brotkrueml\\Extpagetitle\\Tests\\": "Tests"
        }
    },
    "replace": {
        "typo3-ter/extpagetitle": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "extra": {
        "typo3/cms": {
            "app-dir": ".Build",
            "web-dir": ".Build/web"
        }
    },
    "scripts": {
        "extension-init": [
            "rm -rf ../extension-release/*"
        ],
        "extension-copy": [
            "mkdir -p ../extension-release",
            "cp -ra * ../extension-release/"
        ],
        "extension-cleanup": [
            "rm -f ../extension-release/composer.lock",
            "rm -f ../extension-release/README.md",
            "rm -rf ../extension-release/Tests"
        ],
        "extension-zip": [
            "cd ../extension-release/; grep -Po \"(?<='version' => ')([0-9]+\\.[0-9]+\\.[0-9]+)\" ext_emconf.php | xargs -I {version} sh -c 'rm -fv ../extpagetitle_{version}.zip; zip -r ../extpagetitle_{version}.zip *'"
        ],
        "extension-release": [
            "@extension-init",
            "@extension-copy",
            "@extension-cleanup",
            "@extension-zip"
        ]
    }
}
